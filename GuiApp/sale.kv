<Sale>
    name: 'Sale'

    total: total
    price: price
    how: how

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            size: root.width, 40

            Button:
                text: 'Menu'
                size_hint: (0.2, 1)
                pos_hint: {'center_x' : 0.1}
                background_color: (154/255.0, 197/255.0, 229/255.0, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                on_press: root.manager.current = 'Menu'
            Label:
                text: 'SAHAR CO'
                size_hint: (0.8, 1)
                pos_hint: {'center_x' : 0.9}
                background_color: (154/255.0, 197/255.0, 229/255.0, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #Text properties
                font_size: 32
                color: utils.get_color_from_hex('#C98C9A')
                bold: True
                italic: True
                outline_color: (1, 1, 1)
                outline_width: 1
        
        Label:
            text: 'Количество'
            color: (0,0,0,1)
        TextInput:
            id: total
            multiline: False
        
        Label:
            text: 'Цена'
            color: (0,0,0,1)
        TextInput:
            id: price
            multiline: False

        Label:
            text: 'Как'
            color: (0,0,0,1)
        TextInput:
            id: how
            multiline: False
        
        Button:
            text: 'Sale!'
            on_press: root.btnSale()
        
        Label:
            id: res
            text: 'Терминал: 0\nНаличные: 0\nМобильный банк: 0\nВсего: 0'
            color: (0,0,0,1)
            size_hint_y: None
            size: root.width, 200

            
